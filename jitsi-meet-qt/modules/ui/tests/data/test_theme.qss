/* Test Theme Stylesheet */
/* Used for testing theme application and CSS parsing */

/* Base Widget Styles */
QWidget {
    background-color: #2b2b2b;
    color: #ffffff;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 12px;
}

/* Button Styles */
QPushButton {
    background-color: #0078d4;
    border: 1px solid #106ebe;
    border-radius: 4px;
    color: #ffffff;
    padding: 8px 16px;
    min-width: 80px;
    min-height: 24px;
}

QPushButton:hover {
    background-color: #106ebe;
    border-color: #005a9e;
}

QPushButton:pressed {
    background-color: #005a9e;
    border-color: #004578;
}

QPushButton:disabled {
    background-color: #404040;
    border-color: #606060;
    color: #808080;
}

/* Custom Button Styles */
CustomButton {
    background-color: #0078d4;
    border: 2px solid #106ebe;
    border-radius: 6px;
    color: #ffffff;
    font-weight: bold;
    padding: 10px 20px;
}

CustomButton[buttonStyle="primary"] {
    background-color: #0078d4;
    border-color: #106ebe;
}

CustomButton[buttonStyle="success"] {
    background-color: #107c10;
    border-color: #0e6e0e;
}

CustomButton[buttonStyle="warning"] {
    background-color: #ff8c00;
    border-color: #e67e00;
}

CustomButton[buttonStyle="danger"] {
    background-color: #d13438;
    border-color: #b71c1c;
}

/* Status Bar Styles */
QStatusBar {
    background-color: #323232;
    border-top: 1px solid #484848;
    color: #ffffff;
    padding: 4px;
}

StatusBar {
    background-color: #323232;
    border-top: 1px solid #484848;
    min-height: 24px;
}

StatusBar[statusType="info"] {
    color: #4fc3f7;
}

StatusBar[statusType="warning"] {
    color: #ffb74d;
}

StatusBar[statusType="error"] {
    color: #f48fb1;
}

StatusBar[statusType="success"] {
    color: #81c784;
}

/* Tool Bar Styles */
QToolBar {
    background-color: #2d2d30;
    border: 1px solid #3e3e42;
    spacing: 2px;
    padding: 4px;
}

ToolBar {
    background-color: #2d2d30;
    border-bottom: 1px solid #3e3e42;
    min-height: 32px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 3px;
    color: #ffffff;
    padding: 4px 8px;
    margin: 1px;
}

QToolButton:hover {
    background-color: #3e3e42;
    border-color: #007acc;
}

QToolButton:pressed {
    background-color: #007acc;
    border-color: #005a9e;
}

/* Layout Styles */
QVBoxLayout, QHBoxLayout, QGridLayout {
    margin: 8px;
    spacing: 4px;
}

/* Main Layout */
MainLayout {
    background-color: #1e1e1e;
    border: 1px solid #2d2d30;
}

/* Conference Layout */
ConferenceLayout {
    background-color: #252526;
    border: 1px solid #3e3e42;
}

/* Settings Layout */
SettingsLayout {
    background-color: #2d2d30;
    border: 1px solid #3e3e42;
}

/* Scrollbar Styles */
QScrollBar:vertical {
    background-color: #2b2b2b;
    width: 12px;
    border: none;
}

QScrollBar::handle:vertical {
    background-color: #555555;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #666666;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

/* Input Styles */
QLineEdit {
    background-color: #3c3c3c;
    border: 1px solid #555555;
    border-radius: 3px;
    color: #ffffff;
    padding: 6px;
    selection-background-color: #007acc;
}

QLineEdit:focus {
    border-color: #007acc;
}

/* Label Styles */
QLabel {
    color: #ffffff;
    background-color: transparent;
}

QLabel[type="title"] {
    font-size: 16px;
    font-weight: bold;
    color: #ffffff;
}

QLabel[type="subtitle"] {
    font-size: 14px;
    color: #cccccc;
}

QLabel[type="caption"] {
    font-size: 10px;
    color: #999999;
}

/* Animation Support */
* {
    transition: all 0.2s ease-in-out;
}

/* High Contrast Mode */
*[highContrast="true"] {
    border-width: 2px;
    font-weight: bold;
}

/* Responsive Design */
@media (max-width: 800px) {
    QPushButton {
        min-width: 60px;
        padding: 6px 12px;
    }
    
    CustomButton {
        padding: 8px 16px;
    }
}

@media (min-width: 1200px) {
    QPushButton {
        min-width: 100px;
        padding: 10px 20px;
    }
    
    CustomButton {
        padding: 12px 24px;
    }
}