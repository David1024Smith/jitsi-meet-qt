{
  "modules": [
    "core",
    "audio", 
    "video",
    "network",
    "ui",
    "chat",
    "screenshare", 
    "meeting",
    "settings",
    "utils",
    "performance",
    "compatibility"
  ],
  "test_types": {
    "unit": true,
    "integration": true,
    "e2e": true,
    "performance": true,
    "regression": true,
    "security": false,
    "stress": false
  },
  "coverage": {
    "enabled": true,
    "threshold": 75.0,
    "format": ["html", "json", "xml"],
    "exclude_patterns": [
      "*/tests/*",
      "*/examples/*", 
      "*/mocks/*",
      "*/generated/*"
    ],
    "include_patterns": [
      "*/src/*",
      "*/include/*"
    ]
  },
  "performance": {
    "enabled": true,
    "baseline_file": "performance_baseline.json",
    "regression_threshold": 10.0,
    "improvement_threshold": 5.0,
    "benchmarks": {
      "startup_time": {
        "enabled": true,
        "timeout": 30,
        "iterations": 5
      },
      "module_load_time": {
        "enabled": true,
        "timeout": 10,
        "iterations": 3
      },
      "memory_usage": {
        "enabled": true,
        "max_memory_mb": 1024,
        "leak_detection": true
      },
      "cpu_usage": {
        "enabled": true,
        "max_cpu_percent": 80,
        "duration": 60
      },
      "network_latency": {
        "enabled": true,
        "timeout": 5000,
        "target_hosts": ["localhost", "8.8.8.8"]
      }
    }
  },
  "reporting": {
    "formats": ["html", "json", "junit", "csv"],
    "output_dir": "test_results",
    "archive_results": true,
    "retention_days": 30,
    "dashboard": {
      "enabled": true,
      "update_frequency": "daily",
      "metrics": ["coverage", "performance", "test_count", "failure_rate"]
    }
  },
  "ci_integration": {
    "enabled": false,
    "provider": "github",
    "webhook_url": "",
    "notifications": {
      "enabled": true,
      "on_failure": true,
      "on_success": false,
      "on_regression": true,
      "channels": ["email", "slack"]
    },
    "status_checks": {
      "required": ["unit_tests", "integration_tests", "coverage"],
      "optional": ["performance_tests", "e2e_tests"]
    }
  },
  "notifications": {
    "email": {
      "enabled": false,
      "smtp_server": "",
      "smtp_port": 587,
      "username": "",
      "password": "",
      "recipients": [],
      "subject_prefix": "[Jitsi Tests]"
    },
    "slack": {
      "enabled": false,
      "webhook_url": "",
      "channel": "#testing",
      "username": "Jitsi Test Bot",
      "icon_emoji": ":robot_face:"
    },
    "webhook": {
      "enabled": false,
      "url": "",
      "headers": {},
      "payload_template": {
        "status": "{status}",
        "message": "{message}",
        "timestamp": "{timestamp}",
        "results": "{results}"
      }
    }
  },
  "environment": {
    "qt_platform": "offscreen",
    "display": ":99",
    "timeout": {
      "unit_test": 300,
      "integration_test": 600,
      "e2e_test": 1800,
      "performance_test": 3600
    },
    "parallel_execution": {
      "enabled": true,
      "max_workers": 4,
      "module_level": true,
      "test_level": false
    },
    "cleanup": {
      "temp_files": true,
      "log_files": false,
      "cache_files": true,
      "test_data": false
    }
  },
  "quality_gates": {
    "coverage_threshold": 75.0,
    "test_success_rate": 95.0,
    "performance_regression_threshold": 10.0,
    "max_test_duration": 7200,
    "max_memory_usage_mb": 2048,
    "max_cpu_usage_percent": 90
  },
  "debugging": {
    "enabled": false,
    "verbose_logging": false,
    "save_screenshots": true,
    "save_logs": true,
    "core_dumps": false,
    "memory_profiling": false
  },
  "test_data": {
    "generate_synthetic": true,
    "use_fixtures": true,
    "cleanup_after_run": true,
    "fixtures_path": "test_data/fixtures",
    "synthetic_data_size": "medium"
  }
}