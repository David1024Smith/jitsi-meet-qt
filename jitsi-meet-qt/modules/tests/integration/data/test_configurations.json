      "description": "Performance-focused integration test configuration",
      "modules": [
        "utils",
        "settings",
        "performance",
        "network",
        "ui"
      ],
      "test_scenarios": [
        "startup_performance",
        "communication_latency",
        "memory_usage",
        "high_load_scenarios"
      ],
      "timeout": 120000,
      "retries": 1,
      "performance_thresholds": {
        "startup_time_ms": 5000,
        "communication_latency_ms": 100,
        "memory_increase_percent": 50
      }
    },
    "stress_testing": {
      "description": "Stress testing configuration",
      "modules": [
        "utils",
        "settings",
        "network",
        "chat",
        "meeting"
      ],
      "test_scenarios": [
        "high_load_scenarios",
        "resource_constraints",
        "concurrent_operations",
        "failure_recovery"
      ],
      "timeout": 300000,
      "retries": 1,
      "stress_parameters": {
        "concurrent_operations": 100,
        "load_iterations": 1000,
        "failure_injection_rate": 0.05
      }
    }
  },
  "module_dependencies": {
    "utils": [],
    "settings": [],
    "performance": ["utils"],
    "camera": ["utils", "settings"],
    "audio": ["utils", "settings"],
    "screenshare": ["network", "ui"],
    "network": ["utils", "settings"],
    "chat": ["network", "utils"],
    "meeting": ["network", "audio", "camera", "chat"],
    "ui": ["settings", "performance"],
    "compatibility": ["utils"]
  },
  "communication_patterns": {
    "audio_video_sync": {
      "source": "audio",
      "target": "camera",
      "message_type": "sync_request",
      "expected_response": "sync_ack"
    },
    "chat_network": {
      "source": "chat",
      "target": "network",
      "message_type": "send_message",
      "expected_response": "message_sent"
    },
    "performance_ui": {
      "source": "performance",
      "target": "ui",
      "message_type": "metrics_update",
      "expected_response": "ui_updated"
    },
    "settings_broadcast": {
      "source": "settings",
      "target": ["audio", "camera", "network", "ui"],
      "message_type": "setting_changed",
      "expected_response": "setting_applied"
    }
  },
  "error_scenarios": {
    "network_failure": {
      "affected_modules": ["network", "chat", "meeting"],
      "error_type": "connection_lost",
      "recovery_expected": true,
      "recovery_time_ms": 5000
    },
    "memory_exhaustion": {
      "affected_modules": ["all"],
      "error_type": "out_of_memory",
      "recovery_expected": false,
      "graceful_degradation": true
    },
    "module_crash": {
      "affected_modules": ["any"],
      "error_type": "segmentation_fault",
      "recovery_expected": true,
      "restart_required": true
    }
  },
