{
  "version": "2.1.0",
  "build_type": "release",
  "enable_optimizations": true,
  "enable_testing": true,
  "enable_packaging": true,
  "parallel_jobs": 4,
  "compiler_flags": {
    "release": ["-O3", "-DNDEBUG", "-march=native"],
    "debug": ["-g", "-O0", "-DDEBUG"]
  },
  "linker_flags": {
    "release": ["-s", "-Wl,--gc-sections"],
    "debug": []
  },
  "modules": {
    "core": {
      "enabled": true,
      "required": true,
      "description": "Core module management system"
    },
    "utils": {
      "enabled": true,
      "required": true,
      "description": "Utility functions and tools"
    },
    "settings": {
      "enabled": true,
      "required": false,
      "description": "Configuration and settings management"
    },
    "performance": {
      "enabled": true,
      "required": false,
      "description": "Performance monitoring and optimization"
    },
    "camera": {
      "enabled": true,
      "required": false,
      "description": "Camera device management"
    },
    "audio": {
      "enabled": true,
      "required": false,
      "description": "Audio device management"
    },
    "network": {
      "enabled": true,
      "required": false,
      "description": "Network communication"
    },
    "ui": {
      "enabled": true,
      "required": false,
      "description": "User interface components"
    },
    "chat": {
      "enabled": true,
      "required": false,
      "description": "Chat and messaging"
    },
    "screenshare": {
      "enabled": true,
      "required": false,
      "description": "Screen sharing functionality"
    },
    "meeting": {
      "enabled": true,
      "required": false,
      "description": "Meeting management"
    },

  },
  "features": {
    "advanced_audio": {
      "enabled": false,
      "description": "Advanced audio processing features"
    },
    "noise_suppression": {
      "enabled": false,
      "description": "Audio noise suppression"
    },
    "hd_video": {
      "enabled": true,
      "description": "High definition video support"
    },
    "hardware_acceleration": {
      "enabled": true,
      "description": "Hardware acceleration for video processing"
    },
    "p2p_mode": {
      "enabled": true,
      "description": "Peer-to-peer communication mode"
    },
    "bandwidth_optimization": {
      "enabled": true,
      "description": "Network bandwidth optimization"
    },
    "end_to_end_encryption": {
      "enabled": false,
      "description": "End-to-end encryption (experimental)"
    },
    "debug_logging": {
      "enabled": false,
      "description": "Detailed debug logging"
    },
    "performance_profiling": {
      "enabled": false,
      "description": "Performance profiling tools"
    }
  },
  "platform_specific": {
    "windows": {
      "features": ["windows_integration", "directshow"],
      "libraries": ["strmiids", "ole32"]
    },
    "linux": {
      "features": ["pulseaudio", "x11_integration"],
      "libraries": ["pulse", "X11", "Xext"]
    },
    "macos": {
      "features": ["coreaudio"],
      "frameworks": ["CoreAudio", "AudioUnit"]
    }
  },
  "packaging": {
    "create_installers": true,
    "compress_packages": true,
    "sign_packages": false,
    "include_debug_symbols": false,
    "strip_binaries": true
  },
  "testing": {
    "run_unit_tests": true,
    "run_integration_tests": true,
    "run_performance_tests": false,
    "generate_coverage_report": false
  },
  "deployment": {
    "create_appimage": false,
    "create_flatpak": false,
    "create_snap": false,
    "upload_to_repository": false
  }
}